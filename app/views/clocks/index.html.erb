<% @clocks.each do |clock| %>
  <tr>
    <td><%= clock.in_out %></td>
    <td><%= clock.user_id %></td>
    <td><%= clock.task_id %></td>
    <td><%= link_to 'Show', clock %></td>
    <td><%= link_to 'Edit', edit_clock_path(clock) %></td>
    <td><%= link_to 'Destroy', clock, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

