<h1>Leader Board</h1>

<table class="table_data">
    <thead>
      <tr style="font-size: 14px;">
        <th width="100%">Name</th>
        <th>Email</th>
        <th>Entries</th>
        <th>Score</th>
       <%if current_user.last_name == "Barnes"%>
        <th></th>
        <th></th>
        <th></th>
         <%end%>
      </tr>
    </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= Clock.where('user_id = ?',user.id).count %></td>
    <td><%= Clock.where('user_id = ?',user.id).count  * 7%></td>
    <%if current_user.last_name == "Barnes"%>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />


